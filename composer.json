{
  "name": "optimistdigital/nova-detached-filters",
  "description": "This Laravel Nova package allows you to detach filters from the filter dropdown",
  "keywords": [
    "laravel",
    "nova",
    "card",
    "filter",
    "persist"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Kaspar Rosin",
      "email": "kaspar.rosin@gmail.com",
      "role": "Developer"
    },
    {
      "name": "Tarvo Reinpalu",
      "email": "tarvoreinpalu@gmail.com",
      "role": "Developer"
    },
    {
      "name": "Optimist Digital",
      "email": "info@optimistdigital.com",
      "role": "Maintainer"
    }
  ],
  "require": {
    "php": ">=7.1.0",
    "workup/nova": "^2.0 || ^3.0"
  },
  "require-dev": {
    "orchestra/testbench": "^6.3",
    "phpunit/phpunit": "^9.4"
  },
  "autoload": {
    "psr-4": {
      "OptimistDigital\\NovaDetachedFilters\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OptimistDigital\\NovaDetachedFilters\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "OptimistDigital\\NovaDetachedFilters\\CardServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://nova.laravel.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "test": [
      "phpunit tests"
    ]
  }
}
